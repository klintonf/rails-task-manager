<%# View Edit - Formulário para editar tarefa existente %>
<%# Esta página exibe o formulário de edição de tarefa %>

<div class="w-full max-w-2xl mx-auto">
  <%# Botão para voltar aos detalhes da tarefa %>
  <div class="mb-6">
    <%= link_to task_path(@task), class: "inline-flex items-center text-blue-500 hover:text-blue-700 transition-colors" do %>
      <svg
        class="w-5 h-5 mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"
        />
      </svg>
      Voltar para a tarefa
    <% end %>
  </div>

  <%# Card com o formulário %>
  <div class="bg-white rounded-lg shadow-xl p-8">
    <%# Cabeçalho %>
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Editar Tarefa</h1>

      <p class="text-gray-600">
        Atualize as informações da tarefa ou marque como concluída
      </p>
    </div>

    <%# Renderiza o formulário parcial %>
    <%# O mesmo formulário usado em new, mas agora com dados existentes %>
    <%= render "form" %>
  </div>
</div>
