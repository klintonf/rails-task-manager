<%# Partial Form - Formulário compartilhado entre new e edit %>
<%# Este formulário é usado tanto para criar quanto para editar tarefas %>

<%# form_with: helper do Rails para criar formulários %>
<%# model: @task - Rails detecta automaticamente se é new ou edit %>
<%# local: true - não usa AJAX, faz submit normal %>
<%= form_with(model: @task, class: "space-y-6") do |form| %>
  <%# Exibe erros de validação se existirem %>
  <% if @task.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg
            class="h-5 w-5 text-red-400"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"
            />
          </svg>
        </div>

        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@task.errors.count, "erro impediu", "erros impediram") %>
            que esta tarefa fosse salva:
          </h3>

          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# Campo: Título da tarefa %>
  <div>
    <%= form.label :title, "Título", class: "block text-sm font-bold text-gray-700 mb-2" %>

    <%= form.text_field :title, 
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200",
        placeholder: "Ex: Comprar pão",
        autofocus: true %>
  </div>

  <%# Campo: Detalhes da tarefa %>
  <div>
    <%= form.label :details, "Detalhes", class: "block text-sm font-semibold text-gray-700 mb-2" %>

    <%= form.text_area :details, 
        rows: 5,
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-200 resize-none",
        placeholder: "Adicione mais informações sobre a tarefa..." %>

    <p class="mt-1 text-sm text-gray-500">
      Opcional - descreva melhor sua tarefa
    </p>
  </div>

  <%# Campo: Status (Concluída) - só aparece ao editar %>
  <%# new_record?: verifica se é um registro novo (ainda não salvo no banco) %>
  <% unless @task.new_record? %>
    <div class="bg-gray-50 p-4 rounded-lg">
      <div class="flex items-center">
        <%= form.check_box :completed, 
            class: "w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 cursor-pointer" %>

        <%= form.label :completed, "Marcar como concluída", 
            class: "ml-3 text-sm font-medium text-gray-700 cursor-pointer" %>
      </div>

      <p class="ml-8 mt-1 text-sm text-gray-500">
        Marque esta opção quando finalizar a tarefa
      </p>
    </div>
  <% end %>

  <%# Botões de ação %>
  <div class="flex gap-3 pt-4 border-t border-gray-200">
    <%# Botão de salvar %>
    <%= form.submit "Salvar Tarefa", 
        class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-6 rounded-lg transition duration-200 shadow-md hover:shadow-lg cursor-pointer" %>

    <%# Botão de cancelar %>
    <%= link_to "Cancelar", 
        @task.new_record? ? tasks_path : task_path(@task),
        class: "flex-1 text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-3 px-6 rounded-lg transition duration-200" %>
  </div>
<% end %>
