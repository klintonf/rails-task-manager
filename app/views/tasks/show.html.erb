<%# View Show - Exibe detalhes de uma tarefa específica %>
<%# Mostra todas as informações de uma tarefa individual %>

<div class="w-full max-w-3xl mx-auto">
  <%# Botão para voltar à lista de tarefas %>
  <div class="mb-6">
    <%= link_to tasks_path, class: "inline-flex items-center text-blue-500 hover:text-blue-700 transition-colors" do %>
      <svg
        class="w-5 h-5 mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M10 19l-7-7m0 0l7-7m-7 7h18"
        />
      </svg>
      Voltar para todas as tarefas
    <% end %>
  </div>

  <%# Card principal com detalhes da tarefa %>
  <div class="bg-white rounded-lg shadow-xl p-8">
    <%# Cabeçalho com título e status %>
    <div class="border-b border-gray-200 pb-6 mb-6">
      <div class="flex items-start justify-between mb-4">
        <%# Título e checkbox %>
        <div class="flex items-center gap-4 flex-1">
          <% if @task.completed %>
            <%# Tarefa concluída - checkbox grande verde %>
            <span class="text-5xl text-green-500">✓</span>
          <% else %>
            <%# Tarefa pendente - checkbox vazio %>
            <span class="text-5xl text-gray-300">☐</span>
          <% end %>

          <h1 class="text-3xl font-bold text-gray-800 <%= 'line-through text-gray-500' if @task.completed %>">
            <%= @task.title %>
          </h1>
        </div>

        <%# Badge de status %>
        <% if @task.completed %>
          <span
            class="
              inline-block bg-green-100 text-green-800 text-sm font-semibold
              px-4 py-2 rounded-full
            "
          >
            ✓ Concluída
          </span>
        <% else %>
          <span
            class="
              inline-block bg-yellow-100 text-yellow-800 text-sm
              font-semibold px-4 py-2 rounded-full
            "
          >
            ⏳ Pendente
          </span>
        <% end %>
      </div>
    </div>

    <%# Detalhes da tarefa %>
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-gray-700 mb-3">Detalhes</h2>

      <% if @task.details.present? %>
        <p
          class="
            text-gray-600 leading-relaxed whitespace-pre-wrap bg-gray-50 p-4
            rounded-lg
          "
        >
          <%= @task.details %>
        </p>
      <% else %>
        <p class="text-gray-400 italic">Sem detalhes adicionais</p>
      <% end %>
    </div>

    <%# Informações adicionais (datas) %>
    <div class="border-t border-gray-200 pt-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-3">Informações</h2>

      <div class="grid grid-cols-2 gap-4">
        <%# Data de criação %>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500 mb-1">Criada em</p>

          <p class="text-gray-800 font-medium">
            <%= @task.created_at.strftime("%d/%m/%Y às %H:%M") %>
          </p>
        </div>

        <%# Data de última atualização %>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-sm text-gray-500 mb-1">Última atualização</p>

          <p class="text-gray-800 font-medium">
            <%= @task.updated_at.strftime("%d/%m/%Y às %H:%M") %>
          </p>
        </div>
      </div>
    </div>

    <%# Botões de ação %>
    <div class="flex gap-3 justify-end border-t border-gray-200 pt-6">
      <%# Botão de editar %>
      <%= link_to edit_task_path(@task), class: "flex items-center gap-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 shadow-md hover:shadow-lg" do %>
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
          />
        </svg>
        Editar
      <% end %>

      <%# Botão de deletar com confirmação %>
      <%= link_to task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Tem certeza que deseja excluir esta tarefa? Esta ação não pode ser desfeita." }, class: "flex items-center gap-2 bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-6 rounded-lg transition duration-200 shadow-md hover:shadow-lg" do %>
        <svg
          class="w-5 h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
          />
        </svg>
        Excluir
      <% end %>
    </div>
  </div>
</div>
